<?php

/**
 * @file
 * Install, update and uninstall functions for the Cucumber Components module.
 */

use Drupal\Core\Recipe\Recipe;
use Drupal\Core\Recipe\RecipeRunner;

/**
 * Implements hook_install().
 */
function cucumber_components_install() {

  $permissions_recipe = Recipe::createFromDirectory(__DIR__ . '/recipes/permissions');
  RecipeRunner::processRecipe($permissions_recipe);

}
